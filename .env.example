# Email Provider - Resend (primary)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=

# Netlify Forms fallback (optional)
# Set to 'true' to enable Netlify Forms as fallback when Resend fails
NETLIFY_FORMS_ENABLED=false

# Email addresses
SENDER_EMAIL=noreply@healthybrunchclub.at
RESTAURANT_EMAIL=info@healthybrunchclub.at

# Admin notification emails (comma-separated)
# All these addresses receive notifications for new reservations and cancellations
ADMIN_NOTIFICATION_EMAILS=hello@healthybrunchclub.at,erwin.esener@gmail.com
RESERVATION_ADMIN_TOKEN=
MAX_CAPACITY_PER_SLOT=40
BOOKING_TIME_ZONE=Europe/Vienna

# Netlify Blobs configuration
# These are required for blob storage (spam filter, rate limiting, etc.)
# On Netlify, these are automatically injected. For local dev, set manually.
# Get NETLIFY_SITE_ID from: Netlify Dashboard > Site Settings > General > Site ID
# Get NETLIFY_AUTH_TOKEN from: Netlify Dashboard > User Settings > Applications > Personal access tokens
NETLIFY_SITE_ID=
NETLIFY_AUTH_TOKEN=
